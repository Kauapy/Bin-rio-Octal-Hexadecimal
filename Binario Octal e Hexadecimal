numero=int(input('Digite um número inteiro: '))
print('Escolha uma das bases para conversão')
print('[1] converter em BINÁRIO')
print('[2] converter em OCTAL')
print('[3] converter em HEXADECIMAL')
resposta=int(input('Escolha: '))
if(resposta == 1):
    print(f'O {numero} em Binário é: {numero:b}')
elif(resposta == 2):
   print(f'O {numero} em Octal é: {numero:#o}')
elif(resposta == 3):
    print(f'O {numero} em Hexadecimal é: {numero:06x}')
